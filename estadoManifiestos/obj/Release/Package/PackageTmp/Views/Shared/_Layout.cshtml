<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="estado de manifiestos">
    <meta name="author" content="Eduar Anaya">
    <link rel="shortcut icon" href="~/Content/logo_icon.png" />
    <title>@ViewBag.title</title>
    <link href="https://fonts.googleapis.com/css?family=IBM+Plex+Sans" rel="stylesheet">
    <link href="~/CSS/css_Prov/css_bootstrap/bootstrap.css" rel="stylesheet" />
    <link href="~/CSS/css_Prov/fontawesome/css/all.css" rel="stylesheet" />
    <link href="~/Scripts/js_prov/datatables/datatables.css" rel="stylesheet" />
    <link href="~/CSS/css_edit/style.css?v3.0" rel="stylesheet" />


</head>
<body>
    <script src="~/Scripts/js_prov/jQuery/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/js_prov/js_bootstrap/bootstrap.min.js"></script>
    <script src="~/Scripts/js_prov/datatables/datatables.js?v2.0"></script>
    <script src="~/Scripts/js_prov/plugTimer.js"></script>
    <script src="~/Scripts/js_edit/js_timer.Js"></script>
    <script src="~/Scripts/js_edit/index.js?v1.1"></script>


    <!-- Navegacion -->
    <nav id="barraMenu" class="navbar barras navbar-expand-lg fixed-top">
        <div class="row" style="display: contents;">
            <div class="col-xl-7 col-lg-6 col-md-5 col-sm-12">
                <h4>
                    <a class="navbar-brand titulo" href="@Url.Action("estados", "manifiestos")">
                        <img src="~/Content/Logo_transer.png" style="width: 6rem" alt="Inicio" />
                    </a>
                    Reporte Manifiestos
                </h4>
            </div>
            <div class="col">
                <div class="row rowResumen">
                    <div class="col">
                        <div>
                            <h6>ENVIADOS</h6>
                        </div>
                        <div>
                            <span id="btnsearchEnv" class="btn badge badge-success desCantidad">@ViewBag.mEnviados <i class="fas fa-search-plus"></i></span>
                        </div>
                    </div>
                    <div class="col">
                        <div>
                            <h6>PENDIENTES</h6>
                        </div>
                        <div>
                            <span id="btnsearchPend" class="btn badge badge-warning desCantidad">@ViewBag.mPendientes <i class="fas fa-search-plus"></i></span>
                        </div>
                    </div>
                    <div class="col">
                        <div>
                            <h6>RECHAZADOS</h6>
                        </div>
                        <div>
                            <span id="btnsearchRech" class="btn badge badge-danger desCantidad">@ViewBag.mError <i class="fas fa-search-plus"></i></span>
                        </div>
                    </div>
                    <div class="col">
                        <div>
                            <h6>Nro. Registros</h6>
                        </div>
                        <div>
                            <span id="btnsearchReset" class="btn badge badge-light desCantidad">@ViewBag.Tregistros <i class="fas fa-search-plus"></i></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <div class="container _ContAccion">
        @RenderBody()
    </div>


    <footer class="fixed-bottom barras" style="margin-top: 20px;">
        <div class="container" style="font-size: 0.8rem;">
            <div class="row">
                <div class="col" style="display: flex">
                    <span style="margin: auto;">&copy Transer S.A. @DateTime.Now.Year</span><br />
                </div>
            </div>

        </div>
    </footer>
</body>
</html>
